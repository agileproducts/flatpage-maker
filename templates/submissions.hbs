<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>All Submissions | SNAPP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
  <div class="container">
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">SNAPP</span>
        </div>
    </nav>
    <h1 class="mt-3 mb-3">Submissions</h1>

    <form class="border p-3 bg-secondary text-light">
        <div class="mb-1">
            <label for="search" class="form-label">Search submissions</label>
            <input type="search" class="form-control" id="search" aria-describedby="searchHelp">
            <div id="searchHelp" class="form-text text-light">Search by title or author</div>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    {{#each .}}
     <div class="card mb-3">
        <div class="card-body">
            <div class="row">
            <div class="col-9">
                <div class="card-subtitle text-muted journal-name">
                    <span class="fw-bolder">{{[Journal Name]}}</span> | {{[Submission Id]}} | Version: {{[Version number]}}
                </div>
                <h4 class="card-title">{{Title}}</h4>
                <p class="card-text">{{[Corr Author]}}</p>
                <p class="card-text">Submitted: {{[Submission Date]}}</p>
            </div>
            <div class="col-3">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-light">Reviewers invited: <span class="badge bg-primary rounded-pill">{{[No Reviewers Invited]}}</span></li>
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-light">Reviewers accepted: <span class="badge bg-success rounded-pill">{{[No Reviewers Accepted]}}</span></li>  
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-light">Reviewers declined: <span class="badge bg-secondary rounded-pill">{{[No Reviewers Declined]}}</span></li>  
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-light">Reports submitted: <span class="badge bg-success rounded-pill">{{[No Reports Submitted]}}</span></li>
                </ul>
            </div>
            </div>
        </div>
        <div class="card-footer">Assigned to: <span class="fw-bold">{{[Assigned to]}} </span>
        {{#if [Open Task]}}
        | Task {{[Open Task]}} open since {{[Task Creation Date]}}
        {{/if}}
        </div>
    </div>
    {{/each}}
    </div>
  </body>
</html>
